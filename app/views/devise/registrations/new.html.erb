<h2>Zarejestruj się</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div><%= f.label "Adres email" %><br />
  <%= f.email_field :email, :autofocus => true %></div>

   <div><%= f.label "Imię i nazwisko" %><br />
  <%= f.text_field :full_name %></div>

   <div><%= f.label "Stopień lub tytuł naukowy" %><br />
  <%= f.text_field :degree %></div>

  <div><%= f.label "Hasło" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label "Potwierdzenie hasła" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "zarejestruj" %></div>
<% end %>

<%= render "devise/shared/links" %>
