<h2>Zmień swoje dane</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label "Adres email "%><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label "Hasło" %> <i>(pozostaw puste, jeśli nie chcesz zmieniać)</i><br />
  <%= f.password_field :password, :autocomplete => "off" %></div>

  <div><%= f.label "Potwierdzenie hasła" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label "Aktualne hasło" %> <i>(prosimy o aktualne hasło, by potwierdzić zmiany)</i><br />
  <%= f.password_field :current_password %></div>

  <div><%= f.submit "Aktualizuj" %></div>
<% end %>

<h3>Usuń moje konto</h3>

<p>Niezadowolony? <%= button_to "Usuń moje konto", registration_path(resource_name), :data => { :confirm => "potwierdzam usunięcie konta" }, :method => :delete %></p>

<%= link_to "Powrót", :back %>
