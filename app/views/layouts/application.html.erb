<!DOCTYPE html>
<html>
<head>
  <title>KNKF</title>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>

</head>
<body>


<div>
	<%= image_tag('uw_logo.jpg', class: "image" )%>
</div>

	<% if user_signed_in? %>
<navbar class="navbar-form navbar-left">
	
	<div class="form-group"><%= link_to 'Strona główna', home_index_path, class: "btn btn-link" %></div>

<li class="dropdown form-group">
<a class="dropdown-toogle" data-toggle='dropdown' href='#'>Spotkania <span class='caret'></span>
</a>
	<ul class="dropdown-menu">
		<div ><%= link_to 'Wszystkie spotkania', meetings_path, class: "btn btn-link" %></div>
		<div ><%= link_to 'Moje spotkania', my_meetings_path, class: "btn btn-link" %></div>
	</ul>
</li>

	<div class="form-group"><%= link_to 'Lektury', readings_path, class: "btn btn-link" %></div>
	<div class="form-group"><%= link_to 'Kontakt', readings_path, class: "btn btn-link" %></div>
	<div class="form-group"><%= link_to 'O nas', home_about_us_path, class: "btn btn-link" %></div>

</navbar>

<navbar class="navbar-form navbar-left">
</navbar>
<navbar class="navbar-form navbar-right">

<% if current_user.knkf_member %>
		<div class="form-group" title="jako członek KNKF możesz dodawać nowe spotkania, lektury na spotkania oraz głosować" id="member"><%= current_user.full_name %>, zalogowaliśmy Cię, masz uprawnienia KNKF <%= current_user.id %> </div>
		<% else %>
		<div class="form-group" title="jako gość możesz zapisać się lub wypisać ze spotkania, nie możesz tworzyć spotkań i głosować na lektury" id="guest"> <%= current_user.full_name %>, zalogowaliśmy Cię, masz uprawnienia gościa <%= current_user.id %> </div>
	<% end %>
		<div class="form-group"> </div> <%= link_to "Zmień moje dane", edit_user_registration_path %> </div>
		<div class="form-group"><%= link_to 'Wyloguj', destroy_user_session_path, class: "btn btn-link", :method =>'delete' %> </div>
<% end %>


</navbar>
<br>
<br>

<% if flash[:alert] %>
	<div class="alert alert-error"> <%= flash[:alert] %> </div>
<% end %>
<% if flash[:notice] %>
	<div class="alert alert-error"> <%= flash[:notice] %> </div>
<% end %>

<%= yield %>

<footer class="navbar-form">
	<div class="form-group"><%= link_to 'Kontakt', readings_path, class: "btn btn-link" %></div>
	<div class="form-group"><%= link_to 'O nas', home_about_us_path, class: "btn btn-link" %></div>
</footer>

</body>
</html>

      
